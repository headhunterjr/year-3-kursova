<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-site-verification" content="LCCZ9R1wlvikEL8XjydVInILd3q8QkX3qVk1mBVpOvM" />
    <meta name="description" content="Онлайн калькулятор популярних алгоритмів теорії графів: Дейкстри, Флойда-Воршалла, Прима. Завантажуйте Excel-таблиці або вводьте матриці суміжності вручну."/>
    <title>@ViewData["Title"] - Алгоритми графів</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraphAlgorithms.styles.css" asp-append-version="true" />
</head>
<body>
    <a class="static-text" asp-controller="Home" asp-action="Index">Алгоритми для графів</a>
    <div class="container">
        <main role="main" class="pb-3">
            @if (Context.Request.Path.StartsWithSegments("/Problem"))
            {
                <div class="main-grid">
                    <aside class="sidebar">
                        <h2 class="sidebar-title">Алгоритми</h2>
                        <nav>
                            <ul class="nav-list">
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Dijkstra"
                                       class="nav-link @(Context.Request.Path.StartsWithSegments("/Problem/Dijkstra") ? "active" : "")">
                                        Алгоритм Дейкстри
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Floyd"
                                       class="nav-link @(Context.Request.Path.StartsWithSegments("/Problem/Floyd") ? "active" : "")">
                                        Алгоритм Флойда-Воршалла
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Prim"
                                       class="nav-link @(Context.Request.Path.StartsWithSegments("/Problem/Prim") ? "active" : "")">
                                        Алгоритм Прима
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </aside>
                    <div class="content-area">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                @RenderBody()
            }
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>