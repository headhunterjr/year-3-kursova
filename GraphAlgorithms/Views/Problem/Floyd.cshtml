@{
    ViewData["Title"] = "Алгоритм Флойда-Воршалла";
}

<div class="text-center">
    <h1 class="display-4">Алгоритм Флойда-Воршалла</h1>

    <select id="inputMethod">
        <option value="" disabled selected>Оберіть спосіб задання графу</option>
        <option value="excel">Завантажити таблицю</option>
        <option value="manual">Ввести матрицю суміжності вручну</option>
    </select>


    <form id="excelForm" asp-action="SolveFloyd" method="post" enctype="multipart/form-data" style="display: none;">
        <div>
            <label for="excelFile">Обрати файл:</label>
            <input type="file" id="excelFile" name="excelFile" accept=".xlsx" />
        </div>
        <button type="submit">Завантажити та розв'язати</button>
    </form>

    <div id="manualMatrixForm" style="display: none;">
        <label for="matrixSize">Кількість вершин графа:</label>
        <input type="number" id="matrixSize" name="matrixSize" min="1" required />
        <button id="generateMatrix">Створити матрицю</button>

        <form id="manualForm" asp-action="SolveFloydManual" method="post" style="display: none;">
            <div id="matrixInputs"></div>
            <button type="submit">Обчислити</button>
        </form>
    </div>

    <div id="result">

    </div>
</div>

<script src="~/js/floyd.js"></script>
