<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Алгоритми для графів" />
    <meta name="twitter:title" content="Алгоритми для графів" />
    <meta property="og:site_name" content="Алгоритми для графів" />
    <meta name="google-site-verification" content="LCCZ9R1wlvikEL8XjydVInILd3q8QkX3qVk1mBVpOvM" />
    <meta name="description" content="Онлайн калькулятор популярних алгоритмів теорії графів: Дейкстри, Флойда-Воршалла, Прима. Завантажуйте Excel-таблиці або вводьте матриці суміжності вручну."/>
    <title>@ViewData["Title"] - GraphAlgorithms</title>
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "WebSite",
          "url": "https://graphalgorithms-anchiforov.up.railway.app/",
          "name": "Алгоритми для графів",
          "alternateName": "Graph Algorithms"
        }
    </script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraphAlgorithms.styles.css" asp-append-version="true" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="manifest" href="/images/site.webmanifest">
</head>
<body>
    <a class="static-text" asp-controller="Home" asp-action="Index">Алгоритми для графів</a>
    <div class="container">
        <main role="main" class="pb-3">
            @if (Context.Request.Path.StartsWithSegments("/Problem"))
            {
                <div class="main-grid">
                    <aside class="sidebar">
                        <h2 class="sidebar-title">Алгоритми</h2>
                        <nav>
                            <ul class="nav-list">
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Dijkstra"
                                       class="nav-link @(Context.Request.Path.StartsWithSegments("/Problem/Dijkstra") ? "active" : "")">
                                        Алгоритм Дейкстри
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Floyd"
                                       class="nav-link @(Context.Request.Path.StartsWithSegments("/Problem/Floyd") ? "active" : "")">
                                        Алгоритм Флойда-Воршалла
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Prim"
                                       class="nav-link @(Context.Request.Path.StartsWithSegments("/Problem/Prim") ? "active" : "")">
                                        Алгоритм Прима
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </aside>
                    <div class="content-area">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                @RenderBody()
            }
        </main>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>