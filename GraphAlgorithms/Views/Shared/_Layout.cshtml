<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Алгоритми графів</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraphAlgorithms.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a class="site-title" asp-controller="Home" asp-action="Index">Алгоритми для графів</a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (Context.Request.Path.StartsWithSegments("/Problem"))
            {
                <div class="main-grid">
                    <aside class="sidebar">
                        <h2 class="sidebar-title">Алгоритми</h2>
                        <nav>
                            <ul class="nav-list">
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Dijkstra" class="nav-link">
                                        Алгоритм Дейкстри
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Floyd" class="nav-link">
                                        Алгоритм Флойда-Воршалла
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Problem" asp-action="Prim" class="nav-link">
                                        Алгоритм Прима
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </aside>
                    <div class="content-area">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                @RenderBody()
            }
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>